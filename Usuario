package diagrama;

import java.util.ArrayList;
import java.util.Scanner;

public class Usuario {
	private String nombre;
	private String contraseña;
	private String email;
	private String direccionEnvio;
	private String paypal;
	private String tlf;
	private ArrayList<Usuario> usuarios = new ArrayList<Usuario>();

	Usuario(){
		
	}
	
	public Usuario(String nombre,  String email, String contraseña, String direccionEnvio, String paypal, String tlf) {
		this.nombre = nombre;
		this.contraseña = contraseña;
		this.email = email;
		this.direccionEnvio = direccionEnvio;
		this.paypal = paypal;
		this.tlf = tlf;
	}
	
	public ArrayList<Usuario> getUsuarios() {
		return usuarios;
	}

	public void setUsuarios(Usuario u) {
		usuarios.add(u);
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public String getContraseña() {
		return contraseña;
	}

	public void setContraseña(String contraseña) {
		this.contraseña = contraseña;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public String getDireccionEnvio() {
		return direccionEnvio;
	}

	public void setDireccionEnvio(String direccionEnvio) {
		this.direccionEnvio = direccionEnvio;
	}

	public String getPaypal() {
		return paypal;
	}

	public void setPaypal(String paypal) {
		this.paypal = paypal;
	}

	public String getTlf() {
		return tlf;
	}

	public void setTlf(String tlf) {
		this.tlf = tlf;
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Usuario u = new Usuario();
		Alimentacion a = new Alimentacion();
		Ropa r = new Ropa();
		Electronica e = new Electronica();
		Carrito c = new Carrito();
		
		a.crearAlimentos();
		r.crearRopa();
		e.crearElectronica();
		
		boolean salir = false;
		
		int option;
		
		while(!salir) {
			System.out.println("\n");
			System.out.println("Número de usuarios: " + u.getUsuarios().size() + "\t\t(Si el número de usuarios el 0, escoja la opción 1)\t NOTA: "
				+ "Una vez sales del programa, se pierden los usuarios");
			System.out.println("\nNuevo usuario (1)");
			System.out.println("Escoger productos (2)");
			System.out.println("Ver carrito (3)");
			System.out.println("Salir (5)");
			System.out.print("\nOpción: ");
			option = sc.nextInt();
		
			switch(option) {
			case 1:
				String nombre;
				String email;
				String contraseña;
				String direccionEnvio;
				String paypal;
				String tlf;
			
				System.out.print("Introduce un nombre de usuario: "); 
				nombre = sc.next();
				System.out.print("\nEmail: " ); 
				email = sc.next();
				System.out.print("\nContraseña: "); 
				contraseña = sc.next();
				System.out.print("\nDireccion: "); 
				direccionEnvio = sc.next();
				System.out.print("\nNúmero de cuenta Paypal: "); 
				paypal = sc.next();
				System.out.print("\nNúmero de teléfono: "); 
				tlf = sc.next();
			
				Usuario u1 = new Usuario(nombre, email, contraseña, direccionEnvio, paypal, tlf);
				u.setUsuarios(u1);
				System.out.println("Usuario creado");
				break;
				
			case 2:
				System.out.println("\n1- Alimentación");
				a.imprimirAlimentos();
				System.out.println("2- Ropa");
				r.imprimirRopa();
				System.out.println("3- Electrónica");
				e.imprimirElectronica();
			
				System.out.println("Escoge el producto que quieras de la siguiente forma: 1(espacio)2 "
					+ "--> pera.");
				System.out.println("Se añadirá al carrito automáticamente");
				System.out.println("Escribe \"0 0\" para salir.");
			
				while(true) {
					System.out.print("Categoría y producto");
					int categoria = sc.nextInt();
					int producto = sc.nextInt();
				
					if(categoria == 0 & producto == 0) {
						break;
					}
				
					switch(categoria) {
					case 1: //Entra el alimentacion
						switch(producto) {
						case 1: //Primer alimento
							c.carrito.add(a.listaAlimentos.get(0));
							break;
						case 2:
							c.carrito.add(a.listaAlimentos.get(1));
							break;
						case 3:
							c.carrito.add(a.listaAlimentos.get(2));
							break;
						case 4:
							c.carrito.add(a.listaAlimentos.get(3));
							break;
						case 5:
							c.carrito.add(a.listaAlimentos.get(4));
							break;
						}
						break;
					case 2://Entra en Ropa
						switch(producto) {
						case 1: 
							c.carrito.add(r.listaRopa.get(0));
							break;
						case 2:
							c.carrito.add(r.listaRopa.get(1));
							break;
						case 3:
							c.carrito.add(r.listaRopa.get(2));
							break;
						case 4:
							c.carrito.add(r.listaRopa.get(3));
							break;
						case 5:
							c.carrito.add(r.listaRopa.get(4));
							break;
						}
						break;
					case 3://Entra en Electronica
						switch(producto) {
						case 1: 
							c.carrito.add(e.listaElectronica.get(0));
							break;
						case 2:
							c.carrito.add(e.listaElectronica.get(1));
							break;
						case 3:
							c.carrito.add(e.listaElectronica.get(2));
							break;
						case 4:
							c.carrito.add(e.listaElectronica.get(3));
							break;
						case 5:
							c.carrito.add(e.listaElectronica.get(4));
							break;
						}
						break;
					}
				}
			
				break;
			case 3:
				if(c.carrito.size() == 0) {
					System.out.println("El carrio está vacío");
				}else {
					for(int i = 0; i < c.carrito.size(); i++) {
						System.out.println(c.carrito.get(i).nombre);
					}
				}
				break;
			case 5:
				salir = true;
				break;
			}
		}
		
		System.out.println("Hasta la próxima!!");
	}
	
}
